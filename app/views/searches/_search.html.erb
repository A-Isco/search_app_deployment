<div class="text-center">
  <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-4 max-w-3xl mx-auto mt-10">
    <% searches.each do |search| %>
      <div class="bg-gradient-to-r from-teal-500 to-pink-300 text-white shadow-md rounded-lg p-4 mb-4">
        <span class="text-4xl font-bold block mb-2"><%= search.query %></span>
        <% if search.respond_to?(:count) %>
          <span class="bg-green-500 text-white text-sm font-bold px-3 py-1 rounded-full inline-block"><%= search.count %> times</span>
        <% else %>
          <span class="bg-blue-500 text-white text-xl font-bold px-3 py-1 rounded-full inline-block">
            <%= search.updated_at.strftime('%A, %b %d, %Y %I:%M %p') %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>